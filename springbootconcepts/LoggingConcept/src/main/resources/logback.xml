<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%red(%d{yyyy-MM-dd HH:mm:ss.SSS}) [%green(%thread)] %highlight(%-5level) %yellow(%logger{36}) - %highlight(%cyan((%msg%cyan(%n))))%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
 
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
